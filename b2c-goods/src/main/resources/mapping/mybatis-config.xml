<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
        <settings>
            <setting name="cacheEnabled" value="false"/>
            <setting name="lazyLoadingEnabled" value="true"/>
            <setting name="aggressiveLazyLoading" value="false"/>
            <setting name="localCacheScope" value="STATEMENT"/>
            <setting name="multipleResultSetsEnabled" value="true"/>
            <setting name="useColumnLabel" value="true"/>
            <setting name="defaultStatementTimeout" value="25000"/>
            <setting name="mapUnderscoreToCamelCase" value="true"/> <!-- 将带'_'的 SQL 列名自动映射为驼峰命名的 Java 变量 -->
            <setting name="useGeneratedKeys" value="false"/>
        </settings>

  <mappers>
        <mapper resource="mapping/backCategoryMapper.xml"/>
        <mapper resource="mapping/frontCategoryMapper.xml"/>
        <mapper resource="mapping/categoryRelationMapper.xml"/>
        <mapper resource="mapping/brandMapper.xml"/>
    </mappers>
</configuration>